{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        },

        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py", // 这个路径使用 ${workspaceFolder}，确保指向你的 manage.py 文件
            "args": [
                "runserver",
                "0.0.0.0:8000"  // 指定要运行的地址和端口
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "backend_try.settings" // 填写 settings 模块的 Python 路径
            }
        }
    ]
}
